<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.matrixdev.tutorhelper.SignUpActivity" >

    <EditText
        android:id="@+id/ST1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:enabled="false" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="Admin Username" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignRight="@+id/textView1"
        android:layout_below="@+id/ST1"
        android:layout_marginTop="18dp"
        android:text="Admin Password" />

    <EditText
        android:id="@+id/ST2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ST1"
        android:layout_alignRight="@+id/ST1"
        android:layout_below="@+id/textView2"
        android:ems="10"
        android:enabled="false"
        android:inputType="textPassword" >

        <requestFocus />
    </EditText>

    <CheckBox
        android:id="@+id/SC1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/ST1"
        android:text="Edit" />

    <EditText
        android:id="@+id/ST3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ST2"
        android:layout_below="@+id/ST2"
        android:layout_marginTop="86dp"
        android:ems="10"
        android:hint="Enter new username" />

    <EditText
        android:id="@+id/ST4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ST3"
        android:layout_alignRight="@+id/ST3"
        android:layout_below="@+id/ST3"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Enter new password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ST4"
        android:layout_alignRight="@+id/ST4"
        android:layout_below="@+id/ST4"
        android:layout_marginTop="22dp"
        android:text="Create new Guest a/c" />

    <Button
        android:id="@+id/SB1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ST2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Save Changes" />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ST3"
        android:layout_alignRight="@+id/ST3"
        android:layout_below="@+id/SB1" />

</RelativeLayout><!-- From: file:/C:/Users/ASUS/Documents/GitHub/TutorHelper/res/layout/activity_sign_up.xml -->