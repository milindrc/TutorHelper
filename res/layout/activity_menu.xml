<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MenuActivity" >

    <Button
        android:id="@+id/ADD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="add"
        android:text="ADD Records"
        android:layout_marginTop="120dp"
        android:layout_below="@+id/Register"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/VB1" />

    <Button
        android:id="@+id/Register"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:onClick="signup"
        android:text="User Panel" />

    <Button
        android:id="@+id/VB1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="view"
        android:text="View/Modify Records"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ADD"
        android:layout_alignParentLeft="true"
        android:layout_alignEnd="@+id/Register" />

    <Button
        android:id="@+id/Del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="delete"
        android:text="Delete Records"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/VB1"
        android:layout_alignParentLeft="true"
        android:layout_alignEnd="@+id/Register" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attandance"
        android:id="@+id/attandance"
        android:onClick="attandance"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Del"
        android:layout_alignParentLeft="true"
        android:layout_alignEnd="@+id/Register" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today&apos;s Schedule"
        android:id="@+id/TODAY"
        android:onClick="Today"
        android:layout_below="@+id/attandance"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>